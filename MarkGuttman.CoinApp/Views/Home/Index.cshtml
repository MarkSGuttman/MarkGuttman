<div class="gray" layout="row" layout-wrap layout-fill>
    @* PIE CHART *@
    <section layout-fill>
        <md-subheader class="md-primary">Data Visualizations</md-subheader>
        <div layout="column" layout-padding layout-align="center center">
            <h3>
                Graphic Representations via Data-Driven Documents
            </h3>
        </div>
        <div theme="forest" layout="column" layout-padding layout-margin>
            <md-card>
                <div class="md-card-image">
                    <resize data="data"></resize>
                </div>
                <md-card-title>
                    <md-card-title-text>
                        <span class="md-headline">
                            Optimal Change
                        </span>
                        <span class="md-subhead">pie chart visualization</span>
                    </md-card-title-text>
                </md-card-title>
                <md-card-content>
                    <div layout="column" layout-align="center center">
                        <h3>Results</h3>
                        <div layout="row" layout-fill>
                            <md-card flex>
                                <md-list ng-repeat="coin in data" flex>
                                    <md-list-item>
                                        <img class="md-avatar" src="img/AAEAAQAAAAAAAAMHAAAAJGVjODAzODEyLTllZDktNDY0Ni1hMDBlLTZkMzkyZjhkNzdkNw.jpg" alt="{{coint.key}}">
                                        <span>{{coin.y}}</span>
                                    </md-list-item>
                                </md-list>
                            </md-card>
                        </div>
                    </div>
                </md-card-content>
            </md-card>

            <md-divider md-inset></md-divider>

            <md-card>
                <div class="md-card-image">
                    <bar data="dataTwo"></bar>
                </div>
                <md-card-title>
                    <md-card-title-text>
                        <span class="md-headline">
                            Optimal Change
                        </span>
                        <span class="md-subhead">bar chart visualization</span>
                    </md-card-title-text>
                </md-card-title>
                <md-card-content layout="row" layout-align="center center">
                    <p>
                        asdlkfajsdlfkasjdlfkjasdlfiasjdf
                        <br />asdflkajsdlfkasjdflaksjdflaskdfjasldkfj
                    </p>
                </md-card-content>
            </md-card>
        </div>
    </section>

    @* MD-GRIDLIST *@
    <section layout-fill @*flex="100"*@>
        <md-subheader class="md-primary">Read Messages</md-subheader>
        <md-grid-list md-cols-xs="1" md-cols-sm="2" md-cols-md="4" md-cols-gt-md="6"
                      md-row-height-gt-md="1:1" md-row-height="2:2"
                      md-gutter="12px" md-gutter-gt-sm="8px">
            <md-grid-tile class="gray"
                          md-rowspan="3" md-colspan="2" md-colspan-sm="1" md-colspan-xs="1">
                <md-grid-tile-footer>
                    <h3>#1: (3r x 2c)</h3>
                </md-grid-tile-footer>
            </md-grid-tile>
            <md-grid-tile class="green">
                <md-grid-tile-header>
                    <h3>Graphs</h3>
                </md-grid-tile-header>
                <div layout-padding layout-align="center">
                    <svg width="96" height="91" style="position:relative;top:22px;">
                        <clipPath id="clip">
                            <path d="M0,0h7.75a45.5,45.5 0 1 1 0,91h-7.75v-20h7.75a25.5,25.5 0 1 0 0,-51h-7.75zm36.2510,0h32a27.75,27.75 0 0 1 21.331,45.5a27.75,27.75 0 0 1 -21.331,45.5h-32a53.6895,53.6895 0 0 0 18.7464,-20h13.2526a7.75,7.75 0 1 0 0,-15.5h-7.75a53.6895,53.6895 0 0 0 0,-20h7.75a7.75,7.75 0 1 0 0,-15.5h-13.2526a53.6895,53.6895 0 0 0 -18.7464,-20z"></path>
                        </clipPath>
                        <linearGradient id="gradient-1" gradientUnits="userSpaceOnUse" x1="7" y1="64" x2="50" y2="107">
                            <stop offset="0" stop-color="#f9a03c"></stop>
                            <stop offset="1" stop-color="#f7974e"></stop>
                        </linearGradient>
                        <linearGradient id="gradient-2" gradientUnits="userSpaceOnUse" x1="2" y1="-2" x2="87" y2="84">
                            <stop offset="0" stop-color="#f26d58"></stop>
                            <stop offset="1" stop-color="#f9a03c"></stop>
                        </linearGradient>
                        <linearGradient id="gradient-3" gradientUnits="userSpaceOnUse" x1="45" y1="-10" x2="108" y2="53">
                            <stop offset="0" stop-color="#b84e51"></stop>
                            <stop offset="1" stop-color="#f68e48"></stop>
                        </linearGradient>
                        <g clip-path="url(#clip)">
                            <path d="M-100,-102m-27,0v300h300z" fill="url(#gradient-1)"></path>
                            <path d="M-100,-102m27,0h300v300z" fill="url(#gradient-3)"></path>
                            <path d="M-100,-102l300,300" fill="none" stroke="url(#gradient-2)" stroke-width="40"></path>
                        </g>
                    </svg>
                </div>
                <md-grid-tile-footer>
                    <h3>#2: (1r x 1c)</h3>
                </md-grid-tile-footer>
            </md-grid-tile>
            <md-grid-tile class="yellow">
                <md-grid-tile-footer>
                    <h3>#3: (1r x 1c)</h3>
                </md-grid-tile-footer>
            </md-grid-tile>
            <md-grid-tile class="blue"
                          md-rowspan="2">
                <md-grid-tile-footer>
                    <h3>#4: (2r x 1c)</h3>
                </md-grid-tile-footer>
            </md-grid-tile>
            <md-grid-tile class="red"
                          md-rowspan="2" md-colspan="2" md-colspan-sm="1" md-colspan-xs="1">
                <md-grid-tile-footer>
                    <h3>#5: (2r x 2c)</h3>
                </md-grid-tile-footer>
            </md-grid-tile>
            <md-grid-tile class="green"
                          md-rowspan="2">
                <md-grid-tile-footer>
                    <h3>#6: (2r x 1c)</h3>
                </md-grid-tile-footer>
            </md-grid-tile>
        </md-grid-list>
    </section>
</div>